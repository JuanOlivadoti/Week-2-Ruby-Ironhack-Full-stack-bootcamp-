<!DOCTYPE html>
<html>
<head>
	<title>Sinatra blog</title>
	<link rel="stylesheet" type="text/css" href="./blog.css">
</head>
<body>

	<header>
		<span><a href="/">Home</a></span>
		<span><a href="/newpost">Create a new post</a></span>
	</header>

	<section>
		
		<h1><%=@title %></h1>
		<h4><%=@date%></h4>
		<p><%=@text%></p>
		<p><%=@author%></a></p>

		<ul><%@author_posts.each do |post| %>
			<li><a href="#" onclick="toggle_visibility('post_text');"><%=  post.title %></a><br>
			<div style="display:none;" id="post_text"><%=  post.text %>  => <%=  post.date.strftime("%d-%m-%Y") %></div></li>
			<%end%>
			</ul>

	</section>

<script type="text/javascript">
